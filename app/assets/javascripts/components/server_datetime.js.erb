$(function() {
  $('.current_server_datetime')[0].innerHTML = moment().format("<%= Time.current %>");
  clock_tick();
});

function clock_tick(){
  var clock_div = $('.current_server_datetime')[0];
  var time = moment(clock_div.innerHTML);
  time.add(1, 'second');
  clock_div.innerHTML = time.format("YYYY-MM-DD HH:mm:ss");
  setTimeout("clock_tick()", 1000);
}
